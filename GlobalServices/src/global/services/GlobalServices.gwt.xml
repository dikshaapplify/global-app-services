<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='globalservices'>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User' />
	<!-- <inherits name="com.google.gwt.logging.Logging" /> -->
	<inherits name="com.google.gwt.xml.XML" />

	<!-- <set-property name="gwt.logging.logLevel" value="SEVERE" /> -->
	<!-- <set-property name="gwt.logging.enabled" value="TRUE" /> -->
	<!-- <set-property name="gwt.logging.consoleHandler" value="TRUE" /> -->

	<replace-with
		class="gwtupload.client.DecoratedFileUpload.DecoratedFileUploadImplClick">
		<when-type-is
			class="gwtupload.client.DecoratedFileUpload.DecoratedFileUploadImpl" />
		<any>
			<when-property-is name="user.agent" value="ie6" />
			<when-property-is name="user.agent" value="ie8" />
			<when-property-is name="user.agent" value="safari" />
		</any>
	</replace-with>
	<replace-with
		class="gwtupload.client.DecoratedFileUpload.DecoratedFileUploadImplNoClick">
		<when-type-is
			class="gwtupload.client.DecoratedFileUpload.DecoratedFileUploadImpl" />
		<any>
			<when-property-is name="user.agent" value="gecko" />
			<when-property-is name="user.agent" value="gecko1_8" />
			<when-property-is name="user.agent" value="opera" />
		</any>
	</replace-with><!-- FileUploadImplOpera has a hack to avoid firing onChange 
		each time the user push a key, this makes gwt-upload behaves bad because 
		we expect the user selects files using the browser selection box. -->
	<replace-with class="com.google.gwt.user.client.ui.FileUpload.FileUploadImpl">
		<when-type-is
			class="com.google.gwt.user.client.ui.FileUpload.FileUploadImpl" />
		<when-property-is name="user.agent" value="opera" />
	</replace-with>


	<!-- Inherit the default GWT style sheet. You can change -->
	<!-- the theme of your GWT application by uncommenting -->
	<!-- any one of the following lines. -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	<!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
	<!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/> -->

	<!-- Other module inherits -->

	<!-- Include GWTUpload library -->
	<inherits name="gwtupload.GWTUpload" />
	<!-- Load dinamically predefined styles in the library when the application 
		starts -->
	<stylesheet src="Upload.css" />


	<!-- Specify the app entry point class. -->
	<entry-point class='global.services.client.GlobalServices' />

	<!-- Specify the paths for translatable code -->
	<source path='client' />
	<source path='shared' />
	<inherits name="global.services.GlobalServices" />
	<inherits name="global.services.GlobalServices" />
	<inherits name="global.services.GlobalServices" />
	<inherits name="global.services.GlobalServices" />
	<inherits name="global.services.GlobalServices" />

</module>
