<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<context-param>
		<!-- max size of the upload request -->
		<param-name>maxSize</param-name>
		<param-value>3145728</param-value>
	</context-param>
	<context-param>
		<!-- Useful in development mode to slow down the uploads in fast networks. 
			Put the number of milliseconds to sleep in each block received in the server. 
			false or 0, means don't use slow uploads -->
		<param-name>slowUploads</param-name>
		<param-value>200</param-value>
	</context-param>

	<!-- Servlets -->

	<servlet>
		<servlet-name>filesUploadServlet</servlet-name>
		<servlet-class>global.services.server.servlet.FilesUploadServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>filesUploadServlet</servlet-name>
		<url-pattern>*.gupld</url-pattern>
	</servlet-mapping>
	

	<servlet>
		<servlet-name>loginService</servlet-name>
		<servlet-class>global.services.server.rpc.LoginServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>loginService</servlet-name>
		<url-pattern>/globalservices/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AppScoreServiceImpl</servlet-name>
		<servlet-class>global.services.server.rpc.AppScoreServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AppScoreServiceImpl</servlet-name>
		<url-pattern>/globalservices/appScores</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AdvertisementServiceImpl</servlet-name>
		<servlet-class>global.services.server.rpc.AdvertisementServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AdvertisementServiceImpl</servlet-name>
		<url-pattern>/globalservices/advertisements</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>NotificationServiceImpl</servlet-name>
		<servlet-class>global.services.server.rpc.NotificationServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>NotificationServiceImpl</servlet-name>
		<url-pattern>/globalservices/notifications</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>FileServiceImpl</servlet-name>
		<servlet-class>global.services.server.rpc.FileServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>FileServiceImpl</servlet-name>
		<url-pattern>/globalservices/files</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>SubmitScore</servlet-name>
		<servlet-class>global.services.server.servlet.SubmitScoreServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SubmitScore</servlet-name>
		<url-pattern>/globalservices/submitscore</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>GetScores</servlet-name>
		<servlet-class>global.services.server.servlet.GetScoreServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetScores</servlet-name>
		<url-pattern>/globalservices/getscores</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetAdvs</servlet-name>
		<servlet-class>global.services.server.servlet.GetAdvertisementServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetAdvs</servlet-name>
		<url-pattern>/globalservices/getadvs</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetNotes</servlet-name>
		<servlet-class>global.services.server.servlet.GetNotificationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetNotes</servlet-name>
		<url-pattern>/globalservices/getnotes</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>GlobalServices.html</welcome-file>
	</welcome-file-list>

</web-app>
