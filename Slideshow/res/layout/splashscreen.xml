<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:a="http://schemas.android.com/apk/res/android"
	a:id="@+id/splashscreenLayout"
	a:layout_width="fill_parent"
	a:layout_height="fill_parent"
	a:orientation="vertical"
	a:gravity="center">

	<LinearLayout
		a:id="@+id/splashscreenWidgetLayout"
		a:layout_width="wrap_content"
		a:layout_height="fill_parent"
		a:orientation="vertical"
		a:gravity="center">

		<ImageView
			a:id="@+id/splashscreenImage"
			a:layout_width="wrap_content"
			a:layout_height="wrap_content"
			a:src="@drawable/splash"/>

		<TextView
			a:id="@+id/splashscreenText"
			a:layout_width="wrap_content"
			a:layout_height="wrap_content"
			a:text="@string/splashscreenInitializing"/>
	</LinearLayout>
</RelativeLayout>
